<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mitfahgelegenheit.androidapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".gui.activities.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gui.activities.AppointmentViewActivity"
            android:label="@string/title_activity_appointment_view"
            android:parentActivityName=".gui.activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gui.activities.UserDataEditActivity"
            android:label="@string/title_activity_user_data_edit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gui.activities.AddNewAppmntActivity"
            android:label="@string/title_activity_add_new_appmnt"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gui.activities.SingleAppmntViewActivity"
            android:label="@string/title_activity_single_appmnt_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gui.activities.OwnParticipationsViewActivity"
            android:label="@string/title_activity_own_participations_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gui.activities.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gui.activities.SingleUserViewActivity"
            android:label="@string/title_activity_single_user_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gui.activities.ParticipatingUsersViewActivity"
            android:label="@string/title_activity_participating_users_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".gui.activities.ArchiveActivity"
            android:label="@string/title_activity_archive"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>